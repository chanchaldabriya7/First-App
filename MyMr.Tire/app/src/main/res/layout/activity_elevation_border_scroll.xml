<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metacube.chanchal.mymrtire.ElevationBorderScrollActivity"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myscrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollContent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LL1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@mipmap/logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the main heading of first Relative Layout."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LL2"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heading 1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/one"
                    android:text="This is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/two"
                    android:text="This is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/three"
                    android:text="This is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout.\nThis is the main heading of first Relative Layout."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:elevation="24dp"
        android:id="@+id/bottomLayout">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button Clear 1"
            android:id="@+id/btnOne"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button Clear 2"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnTwo"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button Clear 3"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnThree"/>
    </LinearLayout>
</RelativeLayout>
