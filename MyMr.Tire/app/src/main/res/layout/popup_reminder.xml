<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AA000000">
    <RelativeLayout
        android:id="@+id/offerReminderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">
        <LinearLayout
            android:id="@+id/offerReminderInnerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="#FFF000"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <Button android:id="@+id/one_day_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:text="ONE DAY"
                android:textSize="18sp"
                android:background="@drawable/rounded_edittext_white"/>
            <Button android:id="@+id/one_week_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:text="ONE WEEK"
                android:textSize="18sp"
                android:background="@drawable/rounded_edittext_white"/>
            <Button android:id="@+id/one_month_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:text="ONE MONTH"
                android:textSize="18sp"
                android:background="@drawable/rounded_edittext_white"/>
            <Button android:id="@+id/choose_time_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:text="CHOOSE A TIME"
                android:textSize="18sp"
                android:background="@drawable/rounded_edittext_white"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_delete"
        android:background="@drawable/background_closebtn_remider_popup"
        android:layout_alignTop="@+id/offerReminderLayout"
        android:layout_alignRight="@+id/offerReminderLayout"
        android:layout_alignEnd="@+id/offerReminderLayout"
        android:layout_marginTop="-20dp"/>
</RelativeLayout>
